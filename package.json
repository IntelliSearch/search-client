{
  "name": "search-client",
  "version": "0.4.3",
  "description": "Javascript library for executing searches in the IntelliSearch search-index via the SearchService REST interface.",
  "main": "dist/search-client.js",
  "typings": "dist/search-client.d.ts",
  "jam": {
    "main": "./dist/search-client.browser.js"
  },
  "browser": {
    "dist/search-client.js": "./dist/search-client.browser.js"
  },
  "scripts": {
    "prebuild": "yarn install",
    "build": "rimraf dist & webpack & tsc -d --outdir tmp & dts-bundle --name search-client --main src/SearchClient.d.ts --out ../dist/search-client.d.ts & rimraf tmp src/*.d.ts",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "coverage": "yarn test -- --coverage --no-cache",
    "coverage:watch": "yarn run coverage -- --watch",
    "doc": "rimraf doc & typedoc ./src/ --exclude node_modules --ignoreCompilerErrors --mode file --experimentalDecorators --target ES6 --out ./doc/",
    "prerelease": "yarn run build && yarn test && yarn run doc",
    "release": "standard-version && yarn pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IntelliSearch/search-client.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "library",
    "SearchService",
    "client",
    "search",
    "IntelliSearch"
  ],
  "author": "Ronny Hanssen <ronny@intellisearch.com> (http://intellisearch.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/intellisearch/search-client/issues"
  },
  "homepage": "https://github.com/intellisearch/search-client#readme",
  "devDependencies": {
    "@types/deepmerge": "~1.3.0",
    "@types/jest": "~18.1.0",
    "@types/node": "~6.0.62",
    "@types/valid-url": "~1.0.2",
    "@types/whatwg-fetch": "^0.0.33",
    "awesome-typescript-loader": "^3.0.4",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "~6.22.0",
    "browserify": "^14.1.0",
    "deepmerge": "~1.3.0",
    "delete-empty": "~0.1.3",
    "domain-task": "~2.0.3",
    "dts-bundle": "~0.7.2",
    "jest": "~18.1.0",
    "standard-version": "~4.0.0",
    "ts-jest": "~18.0.3",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "typedoc": "~0.5.5",
    "typescript": "~2.1.0",
    "valid-url": "~1.0.9",
    "webpack": "^2.2.1",
    "webpack-node-externals": "~1.5.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}

{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"lib": ["es6", "dom"], 
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"emitDecoratorMetadata": true,
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "rootDir": "src",
    "outDir": ".code",
    "newLine": "LF",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib"
  ]
}
